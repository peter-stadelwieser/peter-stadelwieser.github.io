<!DOCTYPE html>
<html lang="de">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Agile Unternehmensentwicklung und Projektbegleitung. Produkt- und Anforderungsmanagement. Einführung von SCRUM und agilen Methoden.">
    <meta name="author" content="Peter Stadelwieser">

    <title>{{pageTitle}}</title>

    <link rel="alternate" href="www.stadelwieser.at" hreflang="de-at" />
    <link rel="alternate" href="stadelwieser.at" hreflang="de-at" />

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="less/grayscale.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">


    <!-- Custom Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">

    <link href="http://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed|Alegreya:700" rel="stylesheet" type="text/css" />

    <link href="http://fonts.googleapis.com/css?family=Oswald:700|Droid+Serif:400,700italic" rel="stylesheet" type="text/css" />



    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">

    <!-- Navigation -->
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                       <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">
                   HOME
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#portfolio">Portfolio</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#about">Über mich</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#contact">Kontakt</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#references">Referenzen</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Intro Header -->
    <header class="jumbotron" id="page-header">
        <div class="container">
            <h1 class="brand-heading">{{pageHeader}}</h1>
            <h2 class="intro-text">{{introTextLine1}}</h2>
            <p class="intro-text">{{introTextLine2}}</p>

        </div>
    </header>

    <!-- About Section -->
    <section id="portfolio" class="container content-section text-center">
        <div class="section-description">
            <h1>Portfolio</h1></div>
        <div class="row">
            {{#each portfolioDetails}}
            <div class="col-lg-4 col-md-6">
                <h2>{{title}}</h2>
                <div class="img-container">
                    <img class="img-rounded" src="{{img_src}}" alt="{{img_alt}}"></img>
                </div>
                <p>{{description}}</p>
            </div>
            {{/each}}
        </div>
    </section>

    <div class="separatorbar"></div>

    <!-- About Section -->
    <section id="about" class="container content-section text-center">
        <div class="section-description">
            <h1>über mich</h1></div>
        <div class="row">
            <div class="col-lg-4">
                <h2>motivation</h2>
                <p>{{aboutMe.motivation}}</p>
            </div>
            <div class="col-lg-4">
                <img class="img-rounded" src="{{aboutMe.portrait_img}}" />
            </div>
            <div class="col-lg-4">
                <h2>Werdegang</h2>
                <ul class="list-group">
                    {{#each aboutMe.werdegang}}
                    <li class="list-group-item">{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </section>

    <div class="separatorbar"></div>

    <!-- Contact Section -->
    <section id="contact" class="container content-section text-center">
        <div class="section-description">
            <h1>kontakt</h1></div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <p>Interesse an einem Erfahrungsaustausch? Kontaktieren Sie mich!</p>

                <p>
                    {{#each contact.addresslines}} {{this}}
                    <br/> {{/each}}
                </p>
                <p><a href="mailto:{{contact.mail}}">{{contact.mail}}</a></p>
                <p>{{contact.phone}}</p>
            </div>
        </div>
    </section>

    <div class="separatorbar"></div>

    <!-- references section -->
    <section id="references" class="container content-section text-center">
        <div class="section-description">
            <h1>referenzen</h1></div>
        <div class="row">
            {{#each references}}
            <div class="col-lg-4 col-md-6">
                <a href="{{img_link}}"><img class="img-responsive" src="{{img_src}}" alt="{{img_info}}" /></a>
            </div>
            {{/each}}
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p>Konzept & Design: Christian Pfanner</p>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="js/jquery.easing.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="js/grayscale.js"></script>

</body>

</html>
